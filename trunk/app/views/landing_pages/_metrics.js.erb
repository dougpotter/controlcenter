//on dom ready...
window.addEvent('domready', function() {

    /* ajax alert */
    $('report_form').addEvent('change', function(event) {
      var text = $('report_form').toQueryString();
      //prevent the page from changing
      event.stop();
      //make the ajax call
      var req = new Request.HTML({
method: 'get',
url: "<%= update_form_url %>",
data: text,
onSuccess: function(response) { 
$('report_form').set('text', ''); 
$('report_form').adopt(response);
}
}).send();
      });

    });
