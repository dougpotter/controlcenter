= javascript_include_tag "filtered_table"
= javascript_include_tag "campaign_dashboard"

<div class=notice></div>
  
div id=left_pane_campaign_dashboard

  h1 | Actions

  div id=action_links
    ul
      li
        = link_to 'New Line Item', new_line_item_path
      li  
        = link_to 'New Campaign', new_campaign_path
      li
        = link_to 'New Partner', new_partner_path
      li
        = link_to 'New AIS', new_ad_inventory_source_path
      li
        = link_to 'New Creative', new_creative_path

div id=right_pane_campaign_dashboard
